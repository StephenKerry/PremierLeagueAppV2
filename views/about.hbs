{{> menu}}

<section class="ui left aligned middle aligned segment">
  
    <h2>Premier League App About</h2>
      <p>
        Featured on this page is some information on how this app was made!
      </p> 
   <div class="ui five statistics" style="margin-top: 1em;">
    
  {{#with info}}
     
    <div class="statistic">
      <div class="value">
        <i class="fas fa-futbol"></i>
      </div>
      <div class="label">
        App Title: <br>
        {{appTitle}}
      </div>
    </div>
    
    <div class="statistic">
      <div class="value">
        <i class="fas fa-futbol"></i> 
      </div>
      <div class="label">
        App Version: <br>
        Version {{version}}
      </div>
    </div> 
     
    <div class="statistic">
      <div class="value">
        <i class="fas fa-futbol"></i> 
      </div>
      <div class="label">
        Made in: <br>
        {{location}}
      </div>
    </div> 
	
    <div class="statistic">
      <div class="value">
        <i class="fas fa-futbol"></i> 
      </div>
      <div class="label">
        Created by: <br>
        {{creators.0.name}}
      </div>
    </div>
	
	
  {{/with}}
  
</div>

  <img src="https://cdn.glitch.global/3bfe7c46-328a-4b93-9d50-6d1e027faf0e/Screenshot%202025-03-08%20185527.png?v=1741460213113" alt="Team Image" class="ui image manager-image">
</section>
