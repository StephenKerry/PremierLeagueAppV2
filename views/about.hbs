{{> menu}}

<section class="ui left aligned middle aligned segment">
  
    <h2>Premier League App About</h2>
      <p>
        More Information on the league will be displayed here!
      </p> 
   <div class="ui five statistics" style="margin-top: 1em;">
    
  {{#with info}}
     
    <div class="statistic">
      <div class="value">
        <i class="fas fa-futbol"></i>
      </div>
      <div class="label">
        App Title: <br>
        {{appTitle}}
      </div>
    </div>
    
    <div class="statistic">
      <div class="value">
        <i class="fas fa-futbol"></i> 
      </div>
      <div class="label">
        App Version: <br>
        Version {{version}}
      </div>
    </div> 
     
    <div class="statistic">
      <div class="value">
        <i class="fas fa-futbol"></i> 
      </div>
      <div class="label">
        Made in: <br>
        {{location}}
      </div>
    </div> 
	
    <div class="statistic">
      <div class="value">
        <i class="fas fa-futbol"></i> 
      </div>
      <div class="label">
        Created by: <br>
        {{creators.0.name}}
      </div>
    </div>
	
	
  {{/with}}
  
</div>

</section>
