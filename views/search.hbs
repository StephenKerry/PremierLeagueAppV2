{{> menu id="search"}}

<section class="ui left aligned middle aligned segment">
  <form class="ui stacked segment form" action = "/searchCategory" method = "POST">
  <div class="field">
    <label>Select a manager</label>
    <select name = "manager" id = "myDropdown">
      <option>Please select One</option>
      {{#each managers}}
        <option value = "{{this}}">{{this}}</option>
      {{/each}}
    </select>
  </div>
  </form>
  
  {{> results}}
  
</section>

<script>
    const dropdown = document.querySelector("#myDropdown");
    dropdown.addEventListener("change", () => document.querySelector("form").submit());
</script>
