<form class="ui stacked segment form" action="/dashboard/addteam" method="POST" enctype="multipart/form-data">
  <div class="four fields">
    <div class="field">
      <label>Team Name</label>
      <input placeholder="Team Name" type="text" name="name" required>
    </div>
    <div class="field">
      <label>Manager Name</label>
      <input placeholder="Manager Name" type="text" name="manager" required>
    </div>
    <div class="field">
      <label>City</label>
      <input placeholder="City" type="text" name="City" required>
    </div>
    <div class="field">
      <label>Stadium</label>
      <input placeholder="Stadium" type="text" name="Stadium" required>
    </div>
  </div>

  <div class="field">
    <label>Team Image</label>
    <input placeholder="Team Image" type="file" name="picture" required>
  </div>

  <div class="field">
    <label>Players (comma-separated)</label>
    <input placeholder="e.g., Player 1, Player 2, Player 3" type="text" name="players" required>
  </div>

  <button class="ui purple submit button">Add Team</button>
</form>
