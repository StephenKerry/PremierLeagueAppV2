{{#if singleTeam.info}}

  <table class="ui fixed striped table">
    <thead>
      <tr>
        <th>Stadium</th>
        <th>Manager</th>
        <th>City</th>
      </tr>
    </thead>
    <tbody>
      {{#each singleTeam.info}}
        <tr>
          <td>
            {{Stadium}}
          </td>
          <td>
            {{manager}}
          </td>
          <td>
            {{City}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  {{else}}
    <h3 class="ui message">
      Empty Team Info!
    </h3>

{{/if}}
